/* -------------------------------------------------------------------------- */
/* --- Animation & Effects --- */
/* -------------------------------------------------------------------------- */
/* Fade In Animation */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

/* Slide In Animation */
@keyframes slideInUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.slide-in-up {
  animation: slideInUp 0.5s ease-in-out;
}

/* Hover Glow Effect */
.glow-on-hover {
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.glow-on-hover::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle, rgba(58, 165, 255, 0.4) 0%, rgba(58, 165, 255, 0) 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  border-radius: inherit;
}

.glow-on-hover:hover::after {
  opacity: 1;
}

/* Loading Spinner */
.spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(58, 165, 255, 0.2);
  border-radius: 50%;
  border-top-color: var(--wa-primary);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Pulse Animation */
@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(58, 165, 255, 0.4);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(58, 165, 255, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(58, 165, 255, 0);
  }
}

.pulse {
  animation: pulse 2s infinite;
}

