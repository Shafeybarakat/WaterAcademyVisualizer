}

.nav-tabs-vertical .tab-content {
  flex: 1;
  padding: 0 1.5rem;
}

/* -------------------------------------------------------------------------- */
/* --- Tooltips & Popovers --- */
/* -------------------------------------------------------------------------- */
/* Tooltip */
.tooltip {
  position: absolute;
  z-index: 1070;
  display: block;
  margin: 0;
  font-family: 'Ubuntu', sans-serif;
  font-style: normal;
  font-weight: 400;
  line-height: 1.5;
  text-align: left;
  text-align: start;
  text-decoration: none;
  text-shadow: none;
  text-transform: none;
  letter-spacing: normal;
  word-break: normal;
  word-spacing: normal;
  white-space: normal;
  line-break: auto;
  font-size: 0.875rem;
  word-wrap: break-word;
  opacity: 0;
}

.tooltip.show {
  opacity: 0.9;
}

.tooltip .tooltip-arrow {
  position: absolute;
  display: block;
  width: 8px;
  height: 8px;
}

.tooltip .tooltip-inner {
  max-width: 200px;
  padding: 0.5rem 0.75rem;
  color: #fff;
  text-align: center;
  background-color: var(--text-primary);
  border-radius: 0.25rem;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
}

.theme-dark .tooltip .tooltip-inner {
  background-color: rgba(15, 23, 42, 0.95);
  color: #f1f5f9;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
}

/* Tooltip Placements */
.tooltip-top .tooltip-arrow,
.tooltip.bs-tooltip-top .tooltip-arrow {
  bottom: 0;
  left: 50%;
  margin-left: -4px;
}

.tooltip-top .tooltip-arrow::before,
.tooltip.bs-tooltip-top .tooltip-arrow::before {
  top: 0;
  border-width: 8px 8px 0;
  border-top-color: var(--text-primary);
}

.tooltip-right .tooltip-arrow,
.tooltip.bs-tooltip-right .tooltip-arrow {
  top: 50%;
  left: 0;
  margin-top: -4px;
}

.tooltip-right .tooltip-arrow::before,
.tooltip.bs-tooltip-right .tooltip-arrow::before {
  right: 0;
  border-width: 8px 8px 8px 0;
  border-right-color: var(--text-primary);
}

.tooltip-bottom .tooltip-arrow,
.tooltip.bs-tooltip-bottom .tooltip-arrow {
  top: 0;
  left: 50%;
  margin-left: -4px;
}

.tooltip-bottom .tooltip-arrow::before,
.tooltip.bs-tooltip-bottom .tooltip-arrow::before {
  bottom: 0;
  border-width: 0 8px 8px;
  border-bottom-color: var(--text-primary);
}

.tooltip-left .tooltip-arrow,
.tooltip.bs-tooltip-left .tooltip-arrow {
  top: 50%;
  right: 0;
  margin-top: -4px;
}

.tooltip-left .tooltip-arrow::before,
.tooltip.bs-tooltip-left .tooltip-arrow::before {
  left: 0;
  border-width: 8px 0 8px 8px;
  border-left-color: var(--text-primary);
}

/* Popover */
.popover {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1060;
  display: block;
  max-width: 276px;
  font-family: 'Ubuntu', sans-serif;
  font-style: normal;
  font-weight: 400;
  line-height: 1.5;
  text-align: left;
  text-align: start;
  text-decoration: none;
  text-shadow: none;
  text-transform: none;
  letter-spacing: normal;
  word-break: normal;
  word-spacing: normal;
  white-space: normal;
  line-break: auto;
  font-size: 0.875rem;
  word-wrap: break-word;
  background-color: var(--card-background);
  background-clip: padding-box;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 0.5rem;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
}

.theme-dark .popover {
  border-color: rgba(255, 255, 255, 0.1);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
}

.popover .popover-arrow {
  position: absolute;
  display: block;
  width: 10px;
  height: 10px;
}

.popover .popover-header {
  padding: 0.75rem 1rem;
  margin-bottom: 0;
  font-size: 1rem;
  color: var(--text-primary);
  background-color: rgba(0, 0, 0, 0.03);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  border-top-left-radius: calc(0.5rem - 1px);
  border-top-right-radius: calc(0.5rem - 1px);
}

.theme-dark .popover .popover-header {
  background-color: rgba(255, 255, 255, 0.05);
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.popover .popover-body {
  padding: 1rem;
  color: var(--text-secondary);
}

/* Popover Placements */
.popover-top .popover-arrow,
.popover.bs-popover-top .popover-arrow {
  bottom: calc(-10px - 1px);
  left: 50%;
  margin-left: -5px;
}

.popover-top .popover-arrow::before,
.popover.bs-popover-top .popover-arrow::before {
  bottom: 1px;
  border-width: 10px 10px 0;
  border-top-color: rgba(0, 0, 0, 0.1);
}

.popover-top .popover-arrow::after,
.popover.bs-popover-top .popover-arrow::after {
  bottom: 0;
  border-width: 10px 10px 0;
  border-top-color: var(--card-background);
}

.popover-right .popover-arrow,
.popover.bs-popover-right .popover-arrow {
  left: calc(-10px - 1px);
  top: 50%;
  margin-top: -5px;
}

.popover-right .popover-arrow::before,
.popover.bs-popover-right .popover-arrow::before {
  left: 1px;
  border-width: 10px 10px 10px 0;
  border-right-color: rgba(0, 0, 0, 0.1);
}

.popover-right .popover-arrow::after,
.popover.bs-popover-right .popover-arrow::after {
  left: 0;
  border-width: 10px 10px 10px 0;
  border-right-color: var(--card-background);
}

.popover-bottom .popover-arrow,
.popover.bs-popover-bottom .popover-arrow {
  top: calc(-10px - 1px);
  left: 50%;
  margin-left: -5px;
}

.popover-bottom .popover-arrow::before,
.popover.bs-popover-bottom .popover-arrow::before {
  top: 1px;
  border-width: 0 10px 10px;
  border-bottom-color: rgba(0, 0, 0, 0.1);
}

.popover-bottom .popover-arrow::after,
.popover.bs-popover-bottom .popover-arrow::after {
  top: 0;
  border-width: 0 10px 10px;
  border-bottom-color: var(--card-background);
}

.popover-left .popover-arrow,
.popover.bs-popover-left .popover-arrow {
  right: calc(-10px - 1px);
  top: 50%;
  margin-top: -5px;
}

.popover-left .popover-arrow::before,
.popover.bs-popover-left .popover-arrow::before {
  right: 1px;
  border-width: 10px 0 10px 10px;
  border-left-color: rgba(0, 0, 0, 0.1);
}

.popover-left .popover-arrow::after,
.popover.bs-popover-left .popover-arrow::after {
  right: 0;
  border-width: 10px 0 10px 10px;
  border-left-color: var(--card-background);
}

/* Theme Adjustments */
.theme-dark .popover-top .popover-arrow::before,
.theme-dark .popover.bs-popover-top .popover-arrow::before,
.theme-dark .popover-right .popover-arrow::before,
.theme-dark .popover.bs-popover-right .popover-arrow::before,
.theme-dark .popover-bottom .popover-arrow::before,
.theme-dark .popover.bs-popover-bottom .popover-arrow::before,
.theme-dark .popover-left .popover-arrow::before,
.theme-dark .popover.bs-popover-left .popover-arrow::before {
  border-color: transparent;
  border-top-color: rgba(255, 255, 255, 0.1);
  border-right-color: rgba(255, 255, 255, 0.1);
  border-bottom-color: rgba(255, 255, 255, 0.1);
  border-left-color: rgba(255, 255, 255, 0.1);
}

/* -------------------------------------------------------------------------- */
/* --- Data Cards & Info Cards --- */
/* -------------------------------------------------------------------------- */
.info-card {
  display: flex;
  flex-direction: column;
  background-color: var(--card-background);
  border-radius: var(--card-border-radius);
  box-shadow: var(--card-shadow);
  overflow: hidden;
  margin-bottom: var(--spacing-between-cards);
  transition: all 0.3s ease;
  border: 1px solid rgba(58, 165, 255, 0.3);
  height: 100%;
}

.info-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--card-hover-shadow);
}

.info-card-header {
  display: flex;
  align-items: center;
  padding: 1.5rem;
  background-color: rgba(58, 165, 255, 0.05);
  border-bottom: 1px solid rgba(58, 165, 255, 0.2);
}

.theme-dark .info-card-header {
  background-color: rgba(56, 189, 248, 0.05);
  border-bottom-color: rgba(56, 189, 248, 0.2);
}

.info-card-icon {
  font-size: 2.5rem;
  color: var(--wa-primary);
  margin-right: 1rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.3s ease;
}

.info-card:hover .info-card-icon {
  transform: scale(1.1);
}

.info-card-title {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-card-title);
  font-weight: var(--font-weight-card-title);
  color: var(--text-primary);
  margin: 0;
}

.info-card-body {
  padding: 1.5rem;
  flex: 1;
}

.info-card-value {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-metric-number);
  font-weight: var(--font-weight-metric-number);
  color: var(--wa-primary);
  margin-bottom: 0.5rem;
}

.info-card-text {
  color: var(--text-secondary);
  margin-bottom: 1rem;
}

.info-card-footer {
  display: flex;
  align-items: center;
  padding: 1rem 1.5rem;
  background-color: rgba(0, 0, 0, 0.02);
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.theme-dark .info-card-footer {
  background-color: rgba(255, 255, 255, 0.02);
  border-top-color: rgba(255, 255, 255, 0.05);
}

.info-card-trend {
  display: flex;
  align-items: center;
  font-size: 0.875rem;
  margin-right: auto;
}

.trend-up {
  color: var(--wa-success);
}

.trend-down {
  color: var(--wa-danger);
}

.trend-neutral {
  color: var(--wa-warning);
}

.info-card-trend i {
  margin-right: 0.25rem;
  font-size: 1rem;
}

/* Stat Card with Square Layout */
.stat-card {
  background-color: var(--card-background);
  border-radius: var(--card-border-radius);
  box-shadow: var(--card-shadow);
  border: 1px solid rgba(58, 165, 255, 0.3);
  padding: 1.5rem;
  margin-bottom: var(--spacing-between-cards);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  height: 220px;
  width: 220px;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 5px;
  background: var(--wa-gradient-blue);
}

.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--card-hover-shadow), 0 0 15px rgba(58, 165, 255, 0.3);
}

.stat-card-icon {
  font-size: 3rem;
  color: var(--wa-primary);
  margin-bottom: 1rem;
  transition: all 0.3s ease;
}

.stat-card:hover .stat-card-icon {
  transform: scale(1.1);
}

.stat-card-value {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-metric-number);
  font-weight: var(--font-weight-metric-number);
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

.stat-card-label {
  font-family: 'Michroma', sans-serif;
  font-size: 0.875rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 1px;
}

/* Color Variants */
.stat-card.primary::before {
  background: linear-gradient(90deg, var(--wa-primary) 0%, var(--wa-info) 100%);
}

.stat-card.secondary::before {
  background: linear-gradient(90deg, var(--wa-secondary) 0%, #9054bb 100%);
}

.stat-card.success::before {
  background: linear-gradient(90deg, var(--wa-success) 0%, #27ae60 100%);
}

.stat-card.warning::before {
  background: linear-gradient(90deg, var(--wa-warning) 0%, #e67e22 100%);
}

.stat-card.danger::before {
  background: linear-gradient(90deg, var(--wa-danger) 0%, #c0392b 100%);
}

.stat-card.primary .stat-card-icon { color: var(--wa-primary); }
.stat-card.secondary .stat-card-icon { color: var(--wa-secondary); }
.stat-card.success .stat-card-icon { color: var(--wa-success); }
.stat-card.warning .stat-card-icon { color: var(--wa-warning); }
.stat-card.danger .stat-card-icon { color: var(--wa-danger); }

/* Data Table Card */
.data-table-card {
  background-color: var(--card-background);
  border-radius: var(--card-border-radius);
  box-shadow: var(--card-shadow);
  border: 1px solid rgba(58, 165, 255, 0.3);
  margin-bottom: var(--spacing-between-cards);
  overflow: hidden;
  transition: all 0.3s ease;
}

.data-table-card:hover {
  box-shadow: var(--card-hover-shadow);
}

.data-table-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  background-color: rgba(58, 165, 255, 0.05);
  border-bottom: 1px solid rgba(58, 165, 255, 0.2);
}

.theme-dark .data-table-header {
  background-color: rgba(56, 189, 248, 0.05);
  border-bottom-color: rgba(56, 189, 248, 0.2);
}

.data-table-title {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-card-title);
  font-weight: var(--font-weight-card-title);
  color: var(--text-primary);
  margin: 0;
}

.data-table-actions {
  display: flex;
  gap: 0.5rem;
}

.data-table-body {
  padding: 0;
}

.data-table-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 1.5rem;
  background-color: rgba(0, 0, 0, 0.02);
  border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.theme-dark .data-table-footer {
  background-color: rgba(255, 255, 255, 0.02);
  border-top-color: rgba(255, 255, 255, 0.05);
}

.data-table-pagination {
  display: flex;
  align-items: center;
}

.data-table-info {
  color: var(--text-secondary);
  font-size: 0.875rem;
}

/* Responsive Grid for Cards */
.card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  gap: var(--spacing-between-cards);
  margin-bottom: var(--spacing-between-sections);
}

@media (max-width: 768px) {
  .card-grid {
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  }
}

/* -------------------------------------------------------------------------- */
/* --- Dashboard Widgets --- */
/* -------------------------------------------------------------------------- */
.widget-container {
  margin-bottom: var(--spacing-between-sections);
}

.widget-title {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-section-header);
  font-weight: var(--font-weight-section-header);
  color: var(--text-primary);
  margin-bottom: 1.5rem;
  display: flex;
