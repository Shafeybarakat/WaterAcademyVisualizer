/* 
 * Water Academy Main Stylesheet
 * Unified, futuristic design for all UI elements
 * Supports both dark and light modes with proper theme switching
 */

/* -------------------------------------------------------------------------- */
/* --- CSS Variables --- */
/* -------------------------------------------------------------------------- */
:root {
  /* Theme: Default (Blue) */
  --theme-name: \"Default\";
  
  /* Core Color Palette */
  --wa-primary: #3aa5ff;
  --wa-primary-dark: #0078f0;
  --wa-primary-light: #70c4ff;
  --wa-secondary: #a078ea;
  --wa-accent: #00d0ff;
  --wa-success: #2ecc71;
  --wa-warning: #f39c12;
  --wa-danger: #e74c3c;
  --wa-info: #00d0ff;
  
  /* Background & Surface Colors */
  --background-color: #f8fafc;
  --card-background: #ffffff;
  --sidebar-gradient-top: #1e3c72;
  --sidebar-gradient-bottom: #2a5298;
  
  /* Text Colors */
  --text-primary: #2c3e50;
  --text-secondary: #566573;
  --text-muted: #7f8c8d;
  --sidebar-text-color: rgba(236, 240, 241, 0.95);
  --sidebar-icon-color: rgba(236, 240, 241, 0.95);
  
  /* Interactive States */
  --hover-bg: rgba(58, 165, 255, 0.15);
  --active-bg: rgba(58, 165, 255, 0.25);
  --sidebar-active-bg: rgba(58, 165, 255, 0.4);
  --sidebar-active-border: #3aa5ff;
  
  /* Measurements & Spacing */
  --sidebar-width: 260px;
  --sidebar-collapsed-width: 70px;
  --card-border-radius: 12px;
  --card-padding: 24px;
  --card-margin: 16px;
  --spacing-unit: 8px;
  --spacing-between-cards: calc(var(--spacing-unit) * 3);
  --spacing-between-sections: calc(var(--spacing-unit) * 5);
  
  /* Icon Sizes */
  --sidebar-icon-size: 22px;
  --dashboard-icon-size: 32px;
  
  /* Shadows & Effects */
  --card-shadow: 0 8px 20px rgba(0, 0, 0, 0.06), 0 2px 6px rgba(0, 0, 0, 0.03);
  --card-hover-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  --box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
  --button-shadow: 0 4px 10px rgba(58, 165, 255, 0.3);
  --glass-blur: blur(10px);
  
  /* Special Effects */
  --glass-bg: rgba(255, 255, 255, 0.1);
  --glass-border: rgba(255, 255, 255, 0.1);
  --wa-gradient-blue: linear-gradient(135deg, var(--wa-primary) 0%, var(--wa-info) 100%);
  --wa-gradient-purple: linear-gradient(135deg, var(--wa-primary) 0%, var(--wa-secondary) 100%);
  
  /* Typography */
  --font-size-card-title: 17px;
  --font-weight-card-title: 600;
  --font-size-section-header: 22px;
  --font-weight-section-header: 600;
  --font-size-dashboard-title: 26px;
  --font-weight-dashboard-title: 700;
  --font-size-metric-number: 30px;
  --font-weight-metric-number: 700;
  --font-size-navigation-text: 14px;
  --font-weight-navigation-text: 500;
  --font-size-regular-text: 15px;
  --font-weight-regular-text: 400;
  
  /* Animations & Transitions */
  --transition-speed: 0.25s;
  --wa-transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  
  /* Navbar & Header */
  --dashboard-header-height: 70px;
  --dashboard-header-margin-bottom: calc(var(--spacing-unit) * 3);
  --dashboard-header-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  
  /* Sidebar Specific */
  --sidebar-logo-container-height: 200px;
  --sidebar-logo-container-padding: calc(var(--spacing-unit) * 2);
  --sidebar-nav-item-height: 44px;
  --sidebar-icon-text-spacing: calc(var(--spacing-unit) * 1.5);
  --sidebar-category-header-font-size: 12px;
  --sidebar-category-header-font-weight: 600;
  --sidebar-category-header-margin-top: calc(var(--spacing-unit) * 3);
  --sidebar-category-header-margin-bottom: var(--spacing-unit);
  --sidebar-item-border-radius: 8px;
}

/* -------------------------------------------------------------------------- */
/* --- Dark Theme --- */
/* -------------------------------------------------------------------------- */
.theme-dark {
  --theme-name: \"Dark\";
  
  /* Core Color Adjustments */
  --wa-primary: #38bdf8;
  --wa-primary-dark: #0ea5e9;
  --wa-primary-light: #7dd3fc;
  
  /* Background & Surface Colors */
  --background-color: #0f172a;
  --card-background: #1e293b;
  --sidebar-gradient-top: #0f172a;
  --sidebar-gradient-bottom: #1e293b;
  
  /* Text Colors */
  --text-primary: #f1f5f9;
  --text-secondary: #cbd5e1;
  --text-muted: #94a3b8;
  --sidebar-text-color: rgba(241, 245, 249, 0.9);
  --sidebar-icon-color: rgba(241, 245, 249, 0.9);
  
  /* Interactive States */
  --hover-bg: rgba(56, 189, 248, 0.15);
  --active-bg: rgba(56, 189, 248, 0.25);
  --sidebar-active-bg: rgba(56, 189, 248, 0.2);
  --sidebar-active-border: #38bdf8;
  
  /* Shadows & Effects */
  --card-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
  --card-hover-shadow: 0 12px 24px rgba(0, 0, 0, 0.4);
  --box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
  --button-shadow: 0 4px 10px rgba(56, 189, 248, 0.2);
  
  /* Special Effects */
  --glass-bg: rgba(15, 23, 42, 0.3);
  --glass-border: rgba(255, 255, 255, 0.1);
}

/* -------------------------------------------------------------------------- */
/* --- Light Theme --- */
/* -------------------------------------------------------------------------- */
.theme-light {
  --theme-name: \"Light\";
  
  /* Core Color Adjustments */
  --wa-primary: #3b82f6;
  --wa-primary-dark: #2563eb;
  --wa-primary-light: #60a5fa;
  
  /* Background & Surface Colors */
  --background-color: #f8fafc;
  --card-background: #ffffff;
  --sidebar-gradient-top: #ffffff;
  --sidebar-gradient-bottom: #f1f5f9;
  
  /* Text Colors */
  --text-primary: #0f172a;
  --text-secondary: #334155;
  --text-muted: #64748b;
  --sidebar-text-color: rgba(15, 23, 42, 0.85);
  --sidebar-icon-color: rgba(15, 23, 42, 0.85);
  
  /* Interactive States */
  --hover-bg: rgba(59, 130, 246, 0.08);
  --active-bg: rgba(59, 130, 246, 0.15);
  --sidebar-active-bg: rgba(59, 130, 246, 0.15);
  --sidebar-active-border: #3b82f6;
  
  /* Shadows & Effects */
  --card-shadow: 0 10px 15px rgba(0, 0, 0, 0.04);
  --card-hover-shadow: 0 15px 25px rgba(0, 0, 0, 0.08);
  --box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
  --button-shadow: 0 4px 10px rgba(59, 130, 246, 0.15);
  
  /* Special Effects */
  --glass-bg: rgba(255, 255, 255, 0.8);
  --glass-border: rgba(0, 0, 0, 0.05);
}

/* -------------------------------------------------------------------------- */
/* --- Typography & Fonts --- */
/* -------------------------------------------------------------------------- */
/* Michroma Font (for headings and titles) */
@font-face {
  font-family: 'Michroma';
  src: url('../fonts/Michroma webfont kit/michroma-regular-webfont.woff2') format('woff2'),
       url('../fonts/Michroma webfont kit/michroma-regular-webfont.woff') format('woff');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

/* Ubuntu Font (for regular text) */
@font-face {
  font-family: 'Ubuntu';
  src: url('../fonts/Ubuntu webfont kit/ubuntu-regular-webfont.woff2') format('woff2'),
       url('../fonts/Ubuntu webfont kit/ubuntu-regular-webfont.woff') format('woff');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Ubuntu';
  src: url('../fonts/Ubuntu webfont kit/ubuntu-bold-webfont.woff2') format('woff2'),
       url('../fonts/Ubuntu webfont kit/ubuntu-bold-webfont.woff') format('woff');
  font-weight: 700;
  font-style: normal;
  font-display: swap;
}

@font-face {
  font-family: 'Ubuntu';
  src: url('../fonts/Ubuntu webfont kit/ubuntu-light-webfont.woff2') format('woff2'),
       url('../fonts/Ubuntu webfont kit/ubuntu-light-webfont.woff') format('woff');
  font-weight: 300;
  font-style: normal;
  font-display: swap;
}

/* Base Typography */
body {
  font-family: 'Ubuntu', sans-serif;
  font-size: var(--font-size-regular-text);
  font-weight: var(--font-weight-regular-text);
  color: var(--text-primary);
  line-height: 1.6;
  background-color: var(--background-color);
  transition: background-color 0.3s ease, color 0.3s ease;
}

h1, h2, h3, h4, h5, h6,
.card-title, .info-card-title, .metric-label, .page-title {
  font-family: 'Michroma', sans-serif;
  margin-bottom: 1rem;
  transition: color 0.3s ease;
  color: var(--text-primary);
}

h1, .h1 {
  font-size: var(--font-size-dashboard-title);
  font-weight: var(--font-weight-dashboard-title);
}

h2, .h2 {
  font-size: calc(var(--font-size-dashboard-title) - 2px);
  font-weight: var(--font-weight-dashboard-title);
}

h3, .h3 {
  font-size: var(--font-size-section-header);
  font-weight: var(--font-weight-section-header);
}

h4, .h4 {
  font-size: calc(var(--font-size-section-header) - 2px);
  font-weight: var(--font-weight-section-header);
}

h5, .h5 {
  font-size: var(--font-size-card-title);
  font-weight: var(--font-weight-card-title);
}

h6, .h6 {
  font-size: calc(var(--font-size-card-title) - 2px);
  font-weight: var(--font-weight-card-title);
}

p {
  margin-bottom: 1rem;
  color: var(--text-secondary);
  transition: color 0.3s ease;
}

a {
  color: var(--wa-primary);
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  color: var(--wa-primary-dark);
  text-decoration: underline;
}

/* -------------------------------------------------------------------------- */
/* --- Layout & Structure --- */
/* -------------------------------------------------------------------------- */
html, body {
  min-height: 100vh;
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

.layout-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.layout-container {
  display: flex;
  flex: 1 0 auto;
}

.layout-page {
  flex: 1;
  margin-left: var(--sidebar-width);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  transition: margin-left 0.3s ease;
  position: relative;
  width: calc(100vw - var(--sidebar-width));
  max-width: 100%;
}

.content-wrapper {
  flex: 1;
  padding: var(--spacing-between-sections) var(--spacing-between-cards);
  background-color: var(--background-color);
  transition: background-color 0.3s ease;
  width: 100%;
  max-width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.container-xxl {
  width: 100%;
  padding-right: var(--spacing-unit);
  padding-left: var(--spacing-unit);
  margin-right: auto;
  margin-left: auto;
  max-width: 100%;
}

.footer {
  background-color: var(--card-background);
  padding: 1rem 0;
  text-align: center;
  color: var(--text-secondary);
  font-size: 0.85rem;
  margin-top: auto;
  transition: background-color 0.3s ease, color 0.3s ease;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.theme-dark .footer {
  border-top-color: rgba(255, 255, 255, 0.1);
}

/* Collapsed Sidebar Layout Adjustments */
.layout-menu-collapsed .layout-page {
  margin-left: var(--sidebar-collapsed-width);
}

/* Mobile Layout Adjustments */
@media (max-width: 1199.98px) {
  .layout-page {
    margin-left: 0;
  }
  
  .layout-menu-collapsed .layout-page {
    margin-left: 0;
  }
}

/* Row and Column Spacing */
.row {
  display: flex;
  flex-wrap: wrap;
  margin-right: -0.75rem;
  margin-left: -0.75rem;
}

.col, .col-auto, .col-1, .col-2, .col-3, .col-4, .col-5, .col-6, 
.col-7, .col-8, .col-9, .col-10, .col-11, .col-12, .col-sm,
.col-sm-auto, .col-sm-1, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, 
.col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-sm-10, .col-sm-11, 
.col-sm-12, .col-md, .col-md-auto, .col-md-1, .col-md-2, .col-md-3, 
.col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, 
.col-md-10, .col-md-11, .col-md-12, .col-lg, .col-lg-auto, .col-lg-1, 
.col-lg-2, .col-lg-3, .col-lg-4, .col-lg-5, .col-lg-6, .col-lg-7, 
.col-lg-8, .col-lg-9, .col-lg-10, .col-lg-11, .col-lg-12, .col-xl, 
.col-xl-auto, .col-xl-1, .col-xl-2, .col-xl-3, .col-xl-4, .col-xl-5, 
.col-xl-6, .col-xl-7, .col-xl-8, .col-xl-9, .col-xl-10, .col-xl-11, 
.col-xl-12 {
  position: relative;
  width: 100%;
  padding-right: 0.75rem;
  padding-left: 0.75rem;
}

/* -------------------------------------------------------------------------- */
/* --- Sidebar Styling --- */
/* -------------------------------------------------------------------------- */
.menu.menu-vertical {
  width: var(--sidebar-width) !important;
  position: fixed;
  top: 0;
  left: 0;
  height: 100vh;
  z-index: 1030;
  transition: all 0.3s ease;
  border-right: none;
  background: linear-gradient(135deg, var(--sidebar-gradient-top) 0%, var(--sidebar-gradient-bottom) 100%);
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
  color: var(--sidebar-text-color);
  overflow-y: auto;
  overflow-x: hidden;
}

/* Logo Container */
.menu.menu-vertical .app-brand.demo {
  height: 190px;
  padding: 10px 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: none;
  margin-bottom: 20px;
}

.menu.menu-vertical .app-brand.demo .app-brand-link {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;
}

/* Logo Image */
.logo-container {
  width: 190px;
  height: 190px;
  display: flex;
  justify-content: center;
  align-items: center;
}

#sidebarLogo, #sidebarLogoDark {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  transition: filter 0.3s ease;
}

.theme-dark #sidebarLogo {
  display: none !important;
}

.theme-dark #sidebarLogoDark {
  display: block !important;
}

.theme-light #sidebarLogo {
  display: block !important;
}

.theme-light #sidebarLogoDark {
  display: none !important;
}

/* Navigation Items */
.menu.menu-vertical .menu-inner > .menu-item {
  margin-bottom: 8px;
  position: relative;
  animation: fadeIn 0.3s ease forwards;
  opacity: 0;
}

.menu.menu-vertical .menu-inner > .menu-item > .menu-link {
  height: var(--sidebar-nav-item-height);
  padding: 10px 18px;
  color: var(--sidebar-text-color);
  font-size: var(--font-size-navigation-text);
  font-weight: var(--font-weight-navigation-text);
  border-radius: 12px;
  margin: 0 12px;
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(5px);
}

.menu.menu-vertical .menu-inner > .menu-item > .menu-link .menu-icon {
  font-size: calc(var(--sidebar-icon-size) - 2px);
  width: var(--sidebar-icon-size);
  height: var(--sidebar-icon-size);
  color: var(--sidebar-icon-color);
  margin-right: 14px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

/* Hover Effects */
.menu.menu-vertical .menu-inner > .menu-item:not(.active) > .menu-link:hover {
  background-color: rgba(255, 255, 255, 0.1);
  color: #ffffff;
  transform: translateX(3px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

.menu.menu-vertical .menu-inner > .menu-item:not(.active) > .menu-link:hover .menu-icon {
  color: var(--wa-primary-light);
  transform: scale(1.1);
}

/* Light Mode Hover Effects */
.theme-light .menu.menu-vertical {
  background: #ffffff !important;
  background: linear-gradient(135deg, #ffffff 0%, #f1f5f9 100%) !important;
}

.theme-light .menu.menu-vertical .menu-item {
  color: var(--text-primary) !important;
}

.theme-light .menu.menu-vertical .menu-inner > .menu-item:not(.active) > .menu-link {
  color: var(--text-primary) !important;
}

.theme-light .menu.menu-vertical .menu-inner > .menu-item:not(.active) > .menu-link .menu-icon {
  color: var(--wa-primary) !important;
}

.theme-light .menu.menu-vertical .menu-inner > .menu-item:not(.active) > .menu-link:hover {
  background-color: rgba(59, 130, 246, 0.1);
  color: var(--wa-primary-dark);
  transform: translateX(3px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.theme-light .menu.menu-vertical .menu-inner > .menu-item:not(.active) > .menu-link:hover .menu-icon {
  color: var(--wa-primary-dark);
  transform: scale(1.1);
}

/* Active State */
.menu.menu-vertical .menu-inner > .menu-item.active > .menu-link {
  background: linear-gradient(90deg, var(--wa-primary) 0%, rgba(58, 165, 255, 0.7) 100%);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  transform: translateX(5px);
}

.menu.menu-vertical .menu-inner > .menu-item.active > .menu-link .menu-icon {
  color: #ffffff;
}

/* Active Glow Effect */
.menu.menu-vertical .menu-inner > .menu-item.active > .menu-link::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: var(--wa-primary);
  opacity: 0.2;
  filter: blur(8px);
  z-index: -1;
  border-radius: 12px;
}

/* Menu Hover Effect */
.hover-effect {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  transition: all 0.3s ease;
  border-radius: 12px;
  z-index: -1;
  mix-blend-mode: overlay;
}

.menu.menu-vertical .menu-inner > .menu-item > .menu-link:hover .hover-effect {
  background-color: rgba(255, 255, 255, 0.15);
  box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
}

/* Sidebar Animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  50% {
    transform: translateY(-2px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Staggered Animation */
.menu-inner > *:nth-child(1) { animation-delay: 0.05s; }
.menu-inner > *:nth-child(2) { animation-delay: 0.1s; }
.menu-inner > *:nth-child(3) { animation-delay: 0.15s; }
.menu-inner > *:nth-child(4) { animation-delay: 0.2s; }
.menu-inner > *:nth-child(5) { animation-delay: 0.25s; }
.menu-inner > *:nth-child(6) { animation-delay: 0.3s; }
.menu-inner > *:nth-child(7) { animation-delay: 0.35s; }
.menu-inner > *:nth-child(8) { animation-delay: 0.4s; }
.menu-inner > *:nth-child(9) { animation-delay: 0.45s; }
.menu-inner > *:nth-child(10) { animation-delay: 0.5s; }
.menu-inner > *:nth-child(n+11) { animation-delay: 0.55s; }

/* Sidebar Footer */
.sidebar-footer {
  padding: 15px;
  text-align: center;
  color: var(--sidebar-text-color);
  font-size: 0.75rem;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
  margin-top: 20px;
  background: rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(5px);
}

.version {
  position: relative;
  display: inline-block;
  padding: 5px 14px;
  background: rgba(0, 0, 0, 0.25);
  border-radius: 20px;
  font-weight: 500;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.1);
  letter-spacing: 0.5px;
}

/* Collapsed Sidebar */
.layout-menu-collapsed .menu.menu-vertical {
  width: var(--sidebar-collapsed-width) !important;
}

.layout-menu-collapsed .app-brand {
  padding: 10px 0 !important;
  height: auto !important;
}

.layout-menu-collapsed .logo-container {
  width: 50px;
  height: 50px;
}

.layout-menu-collapsed #sidebarLogo,
.layout-menu-collapsed #sidebarLogoDark {
  width: 40px;
  height: 40px;
}

.layout-menu-collapsed .menu-inner > .menu-item > .menu-link {
  justify-content: center;
  padding: 10px;
}

.layout-menu-collapsed .menu-inner > .menu-item > .menu-link .menu-icon {
  margin-right: 0 !important;
}

.layout-menu-collapsed .menu-inner > .menu-item > .menu-link .menu-text,
.layout-menu-collapsed .menu-inner > .menu-item > .menu-link .menu-arrow,
.layout-menu-collapsed .sidebar-footer {
  display: none;
}

/* Mobile Sidebar */
@media (max-width: 1199.98px) {
  .menu.menu-vertical {
    transform: translateX(-100%);
    box-shadow: none;
  }
  
  .layout-menu-expanded .menu.menu-vertical {
    transform: translateX(0);
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
  }
  
  .layout-overlay {
    display: block !important;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
    z-index: 1029;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  
  .layout-menu-expanded .layout-overlay {
    opacity: 1;
    visibility: visible;
  }
}

/* -------------------------------------------------------------------------- */
/* --- Navbar / Header --- */
/* -------------------------------------------------------------------------- */
.layout-navbar.container-xxl.navbar.navbar-expand-xl.navbar-detached {
  height: var(--dashboard-header-height);
  margin-top: var(--card-margin);
  margin-bottom: var(--dashboard-header-margin-bottom);
  box-shadow: var(--dashboard-header-shadow);
  border-radius: var(--card-border-radius);
  background-color: var(--card-background);
  padding-left: var(--card-padding);
  padding-right: var(--card-padding);
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s ease, color 0.3s ease;
  position: sticky;
  top: 15px;
  z-index: 1020;
  width: calc(100% - 2rem);
  max-width: calc(100vw - var(--sidebar-width) - 2rem);
}

.theme-dark .layout-navbar {
  border-bottom-color: rgba(255, 255, 255, 0.1);
  background-color: var(--card-background) !important;
  color: var(--text-primary) !important;
}

.theme-dark .page-title {
  color: var(--text-primary) !important;
}

/* Page Title */
.layout-navbar .page-title {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-dashboard-title);
  font-weight: var(--font-weight-dashboard-title);
  color: var(--text-primary);
  margin-right: auto;
  transition: color 0.3s ease;
}

/* Theme Toggle Button */
#theme-toggle-btn {
  width: 38px;
  height: 38px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  color: var(--text-primary);
  border: 1px solid rgba(0, 0, 0, 0.1);
  background-color: transparent;
  border-radius: 50%;
  cursor: pointer;
  margin-right: 15px;
}

.theme-dark #theme-toggle-btn {
  color: #fff;
  border-color: rgba(255, 255, 255, 0.2);
}

#theme-toggle-btn:hover {
  background-color: var(--hover-bg);
  transform: rotate(30deg);
}

/* Theme Icons */
.theme-icon-light, .theme-icon-dark {
  font-size: 1.25rem;
}

.theme-dark .theme-icon-light {
  display: none !important;
}

.theme-dark .theme-icon-dark {
  display: block !important;
}

.theme-light .theme-icon-light {
  display: block !important;
}

.theme-light .theme-icon-dark {
  display: none !important;
}

/* User Welcome & Role */
.user-welcome {
  font-family: 'Michroma', sans-serif;
  font-size: 1rem;
  color: var(--text-primary);
  display: inline-block;
  margin-right: 0.5rem;
  transition: color 0.3s ease;
}

.user-role {
  font-family: 'Michroma', sans-serif;
  font-size: 0.75rem;
  color: var(--wa-primary);
  font-weight: bold;
  display: inline-block;
  padding: 0.1rem 0.5rem;
  background-color: rgba(58, 165, 255, 0.1);
  border-radius: 4px;
  transition: color 0.3s ease, background-color 0.3s ease;
}

.theme-dark .user-role {
  color: var(--wa-primary-light);
  background-color: rgba(56, 189, 248, 0.2);
}

/* User Avatar */
.layout-navbar .avatar {
  width: 42px;
  height: 42px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid var(--wa-primary);
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}

.layout-navbar .avatar:hover {
  box-shadow: 0 0 15px rgba(58, 165, 255, 0.5);
}

.layout-navbar .avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Dropdown Menu */
.dropdown-menu {
  border-radius: var(--card-border-radius);
  box-shadow: var(--card-shadow);
  border: 1px solid rgba(0, 0, 0, 0.1);
  padding: 0.5rem 0;
  min-width: 200px;
  background-color: var(--card-background);
  transition: background-color 0.3s ease;
  z-index: 1030;
}

.theme-dark .dropdown-menu {
  border-color: rgba(255, 255, 255, 0.1);
}

.dropdown-item {
  padding: 0.75rem 1.5rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
  transition: background-color 0.2s ease, color 0.2s ease;
}

.dropdown-item:hover {
  background-color: var(--hover-bg);
  color: var(--wa-primary);
}

.dropdown-item i, 
.dropdown-item .bx {
  margin-right: 0.75rem;
  font-size: 1.1rem;
  color: var(--text-muted);
  transition: color 0.2s ease;
}

.dropdown-item:hover i,
.dropdown-item:hover .bx {
  color: var(--wa-primary);
}

.dropdown-divider {
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  margin: 0.5rem 0;
}

.theme-dark .dropdown-divider {
  border-top-color: rgba(255, 255, 255, 0.1);
}

/* Mobile Header */
@media (max-width: 1199.98px) {
  .layout-navbar .navbar-nav-right {
    margin-left: 0;
  }
  
  .layout-navbar .page-title {
    font-size: calc(var(--font-size-dashboard-title) - 4px);
  }
  
  .user-welcome {
    font-size: 0.9rem;
  }
  
  .user-role {
    font-size: 0.7rem;
  }
}

@media (max-width: 767.98px) {
  .layout-navbar.container-xxl.navbar.navbar-expand-xl.navbar-detached {
    padding-left: 15px;
    padding-right: 15px;
  }
  
  .user-welcome {
    display: none;
  }
}

/* -------------------------------------------------------------------------- */
/* --- Cards --- */
/* -------------------------------------------------------------------------- */
.card {
  background-color: var(--card-background);
  border-radius: var(--card-border-radius);
  box-shadow: var(--card-shadow);
  margin-bottom: var(--spacing-between-cards);
  border: 1px solid rgba(58, 165, 255, 0.3);
  transition: all 0.3s ease-in-out;
  overflow: hidden;
  position: relative;
}

.card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 4px;
  background: var(--wa-gradient-blue);
  opacity: 0.8;
}

.card:hover {
  box-shadow: var(--card-hover-shadow), 0 0 15px rgba(58, 165, 255, 0.3);
  transform: translateY(-3px);
}

.card-header {
  padding: var(--card-padding) var(--card-padding) var(--card-margin) var(--card-padding);
  background-color: transparent;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-card-title);
  font-weight: var(--font-weight-card-title);
  color: var(--text-primary);
  transition: color 0.3s ease, border-color 0.3s ease;
}

.theme-dark .card-header {
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.card-body {
  padding: var(--card-padding);
}

/* Dashboard Stat Cards */
.dashboard-stats {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
  margin-bottom: 20px;
  width: 100%;
}

.stat-card {
  flex: 1 1 180px;
  max-width: 240px;
  height: 180px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 25px 15px;
  border-radius: var(--card-border-radius);
  background: linear-gradient(145deg, var(--card-background), rgba(58, 165, 255, 0.05));
  box-shadow: var(--card-shadow);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 5px;
  background: var(--wa-gradient-blue);
}

.stat-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(58, 165, 255, 0.2);
}

.stat-icon {
  font-size: 3.5rem;
  margin-bottom: 15px;
  transition: all 0.3s ease;
}

.stat-value {
  font-family: 'Michroma', sans-serif;
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 5px;
  color: var(--text-primary);
  transition: color 0.3s ease;
}

.stat-label {
  font-family: 'Michroma', sans-serif;
  font-size: 1rem;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 1px;
  transition: color 0.3s ease;
}

/* Stat Card Icons */
.stat-icon.bx-group {
  color: #4e73df;
}

.stat-icon.bx-book-open {
  color: #1cc88a;
}

.stat-icon.bx-user-pin {
  color: #36b9cc;
}

.stat-icon.bx-user-voice {
  color: #f6c23e;
}

.stat-icon.bx-user-check {
  color: #e74a3b;
}

/* Events & New Group Cards */
.events-section {
  display: flex;
  gap: 20px;
  margin-bottom: 30px;
}

.events-card {
  flex: 2;
}

.new-group-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 30px 20px;
}

.new-group-icon {
  font-size: 5rem;
  margin-bottom: 20px;
  color: #4e73df;
  transition: all 0.3s ease;
}

.new-group-card:hover .new-group-icon {
  transform: scale(1.1);
  color: var(--wa-primary);
}

.new-group-btn {
  padding: 10px 20px;
  font-size: 1rem;
  margin-top: 15px;
  transition: all 0.3s ease;
}

/* Card with Forms */
.form-card .card-body {
  padding: var(--card-padding);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .dashboard-stats {
    flex-direction: column;
    align-items: center;
  }
  
  .stat-card {
    max-width: 100%;
    width: 100%;
  }
  
  .events-section {
    flex-direction: column;
  }
  
  .events-card, 
  .new-group-card {
    width: 100%;
  }
}

/* -------------------------------------------------------------------------- */
/* --- Tables --- */
/* -------------------------------------------------------------------------- */
.table {
  width: 100%;
  margin-bottom: 1rem;
  color: var(--text-primary);
  vertical-align: top;
  border-color: rgba(0, 0, 0, 0.1);
  transition: color 0.3s ease;
}

.theme-dark .table {
  border-color: rgba(255, 255, 255, 0.1);
}

.table > :not(caption) > * > * {
  padding: 0.75rem;
  border-bottom-width: 1px;
  border-bottom-color: rgba(0, 0, 0, 0.1);
}

.theme-dark .table > :not(caption) > * > * {
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.table > thead {
  vertical-align: bottom;
  background-color: rgba(58, 165, 255, 0.1);
  color: var(--text-primary);
  font-weight: 600;
  border-bottom: 2px solid rgba(58, 165, 255, 0.2);
}

.theme-dark .table > thead {
  background-color: rgba(56, 189, 248, 0.1);
  border-bottom-color: rgba(56, 189, 248, 0.2);
  color: var(--text-primary);
}

.theme-dark .table > tbody > tr > *,
.theme-dark .table thead th,
.theme-dark .table td,
.theme-dark .table th {
  color: var(--text-primary) !important;
}

/* Striped Tables */
.table-striped > tbody > tr:nth-of-type(odd) > * {
  background-color: rgba(0, 0, 0, 0.02);
}

.theme-dark .table-striped > tbody > tr:nth-of-type(odd) > * {
  background-color: rgba(255, 255, 255, 0.05);
}

/* Hover Tables */
.table-hover > tbody > tr:hover > * {
  background-color: rgba(58, 165, 255, 0.1);
  cursor: pointer;
}

.theme-dark .table-hover > tbody > tr:hover > * {
  background-color: rgba(56, 189, 248, 0.1);
}

/* Responsive Tables */
.table-responsive {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  border-radius: var(--card-border-radius);
  box-shadow: var(--card-shadow);
}

/* Table Container with Rounded Corners */
.table-container {
  border-radius: var(--card-border-radius);
  overflow: hidden;
  box-shadow: var(--card-shadow);
  margin-bottom: 1.5rem;
}

.table-container .table {
  margin-bottom: 0;
}

/* -------------------------------------------------------------------------- */
/* --- Buttons --- */
/* -------------------------------------------------------------------------- */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-weight: 500;
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  line-height: 1.5;
  border-radius: 8px;
  transition: all 0.25s ease-in-out;
  border: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.btn:hover {
  transform: translateY(-2px);
}

.btn:active {
  transform: translateY(1px);
}

/* Primary Button */
.btn-primary {
  background-color: var(--wa-primary);
  color: #fff;
  box-shadow: var(--button-shadow);
}

.btn-primary:hover, .btn-primary:focus {
  background-color: var(--wa-primary-dark);
  color: #fff;
  box-shadow: 0 5px 15px rgba(58, 165, 255, 0.4);
}

/* Secondary Button */
.btn-secondary {
  background-color: var(--text-secondary);
  color: #fff;
}

.btn-secondary:hover, .btn-secondary:focus {
  background-color: var(--text-primary);
  color: #fff;
}

/* Success Button */
.btn-success {
  background-color: var(--wa-success);
  color: #fff;
}

.btn-success:hover, .btn-success:focus {
  background-color: #27ae60;
  color: #fff;
}

/* Danger Button */
.btn-danger {
  background-color: var(--wa-danger);
  color: #fff;
}

.btn-danger:hover, .btn-danger:focus {
  background-color: #c0392b;
  color: #fff;
}

/* Warning Button */
.btn-warning {
  background-color: var(--wa-warning);
  color: #212529;
}

.btn-warning:hover, .btn-warning:focus {
  background-color: #e67e22;
  color: #212529;
}

/* Info Button */
.btn-info {
  background-color: var(--wa-info);
  color: #fff;
}

.btn-info:hover, .btn-info:focus {
  background-color: #00b8e6;
  color: #fff;
}

/* Light Button */
.btn-light {
  background-color: var(--card-background);
  color: var(--text-primary);
  border: 1px solid rgba(0, 0, 0, 0.1);
}

.btn-light:hover, .btn-light:focus {
  background-color: var(--background-color);
  color: var(--text-primary);
}

.theme-dark .btn-light {
  border-color: rgba(255, 255, 255, 0.1);
}

/* Dark Button */
.btn-dark {
  background-color: var(--text-primary);
  color: #fff;
}

.btn-dark:hover, .btn-dark:focus {
  background-color: #000;
  color: #fff;
}

/* Outline Buttons */
.btn-outline-primary {
  color: var(--wa-primary);
  border: 2px solid var(--wa-primary);
  background-color: transparent;
}

.btn-outline-primary:hover, .btn-outline-primary:focus {
  background-color: var(--wa-primary);
  color: #fff;
}

.btn-outline-secondary {
  color: var(--text-secondary);
  border: 2px solid var(--text-secondary);
  background-color: transparent;
}

.btn-outline-secondary:hover, .btn-outline-secondary:focus {
  background-color: var(--text-secondary);
  color: #fff;
}

/* Button Sizes */
.btn-sm {
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  border-radius: 6px;
}

.btn-lg {
  padding: 0.75rem 1.5rem;
  font-size: 1.1rem;
  border-radius: 10px;
}

/* Button With Icon */
.btn i, .btn .bx {
  margin-right: 0.5rem;
}

.btn-icon {
  width: 40px;
  height: 40px;
  padding: 0;
  border-radius: 50%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-icon i, .btn-icon .bx {
  margin-right: 0;
  font-size: 1.25rem;
}

.btn-icon.btn-sm {
  width: 32px;
  height: 32px;
}

.btn-icon.btn-lg {
  width: 48px;
  height: 48px;
}

/* Button Group */
.btn-group {
  display: inline-flex;
  border-radius: 8px;
  overflow: hidden;
}

.btn-group .btn {
  border-radius: 0;
  margin: 0;
}

.btn-group .btn:first-child {
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}

.btn-group .btn:last-child {
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}

/* Ripple Effect */
.btn::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%, -50%);
  transform-origin: 50% 50%;
}

.btn:focus:not(:active)::after {
  animation: ripple 1s ease-out;
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 0.5;
  }
  20% {
    transform: scale(25, 25);
    opacity: 0.3;
  }
  100% {
    transform: scale(50, 50);
    opacity: 0;
  }
}

/* -------------------------------------------------------------------------- */
/* --- Forms --- */
/* -------------------------------------------------------------------------- */
.form-control {
  display: block;
  width: 100%;
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  font-weight: 400;
  line-height: 1.5;
  color: var(--text-primary);
  background-color: var(--card-background);
  background-clip: padding-box;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.theme-dark .form-control {
  border-color: rgba(255, 255, 255, 0.1);
  background-color: rgba(30, 41, 59, 0.8);
}

.form-control:focus {
  color: var(--text-primary);
  background-color: var(--card-background);
  border-color: var(--wa-primary);
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(58, 165, 255, 0.25);
}

.theme-dark .form-control:focus {
  box-shadow: 0 0 0 0.2rem rgba(56, 189, 248, 0.25);
}

/* Form Label */
.form-label {
  margin-bottom: 0.5rem;
  font-weight: 500;
  color: var(--text-primary);
}

/* Form Select */
.form-select {
  display: block;
  width: 100%;
  padding: 0.5rem 2.5rem 0.5rem 1rem;
  font-size: 0.9rem;
  font-weight: 400;
  line-height: 1.5;
  color: var(--text-primary);
  background-color: var(--card-background);
  background-image: url("../images/chevron-down.svg");
  background-repeat: no-repeat;
  background-position: right 1rem center;
  background-size: 16px 12px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  appearance: none;
  transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.theme-dark .form-select {
  border-color: rgba(255, 255, 255, 0.1);
  background-color: rgba(30, 41, 59, 0.8);
  background-image: url("../images/chevron-down-white.svg");
}

.form-select:focus {
  border-color: var(--wa-primary);
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(58, 165, 255, 0.25);
}

/* Form Check */
.form-check {
  display: block;
  min-height: 1.5rem;
  padding-left: 2em;
  margin-bottom: 0.5rem;
}

.form-check-input {
  float: left;
  margin-left: -2em;
  width: 1.25em;
  height: 1.25em;
  margin-top: 0.125em;
  vertical-align: top;
  border: 1px solid rgba(0, 0, 0, 0.25);
  background-color: var(--card-background);
  appearance: none;
  transition: background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
}

.theme-dark .form-check-input {
  border-color: rgba(255, 255, 255, 0.25);
  background-color: rgba(30, 41, 59, 0.8);
}

.form-check-input[type=\"checkbox\"] {
  border-radius: 0.25em;
}

.form-check-input[type=\"radio\"] {
  border-radius: 50%;
}

.form-check-input:checked {
  background-color: var(--wa-primary);
  border-color: var(--wa-primary);
}

.form-check-input:focus {
  border-color: var(--wa-primary);
  outline: 0;
  box-shadow: 0 0 0 0.2rem rgba(58, 165, 255, 0.25);
}

/* Form Group */
.form-group, .mb-3 {
  margin-bottom: 1rem;
}

/* Input Group */
.input-group {
  display: flex;
  position: relative;
  flex-wrap: wrap;
  align-items: stretch;
  width: 100%;
}

.input-group > .form-control,
.input-group > .form-select {
  position: relative;
  flex: 1 1 auto;
  width: 1%;
  min-width: 0;
}

.input-group > .form-control:not(:last-child),
.input-group > .form-select:not(:last-child) {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
}

.input-group > .form-control:not(:first-child),
.input-group > .form-select:not(:first-child) {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
}

.input-group-text {
  display: flex;
  align-items: center;
  padding: 0.5rem 1rem;
  font-size: 0.9rem;
  font-weight: 400;
  line-height: 1.5;
  color: var(--text-secondary);
  text-align: center;
  white-space: nowrap;
  background-color: var(--background-color);
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 8px;
}

.theme-dark .input-group-text {
  border-color: rgba(255, 255, 255, 0.1);
  background-color: rgba(15, 23, 42, 0.5);
  color: var(--text-muted);
}

/* -------------------------------------------------------------------------- */
/* --- Badges & Labels --- */
/* -------------------------------------------------------------------------- */
.badge {
  display: inline-block;
  padding: 0.35em 0.65em;
  font-size: 0.75em;
  font-weight: 600;
  line-height: 1;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 0.25rem;
  transition: all 0.15s ease-in-out;
}

/* Badge Variants */
.badge-primary, .bg-primary {
  background-color: var(--wa-primary);
  color: #fff;
}

.badge-secondary, .bg-secondary {
  background-color: var(--text-secondary);
  color: #fff;
}

.badge-success, .bg-success {
  background-color: var(--wa-success);
  color: #fff;
}

.badge-danger, .bg-danger {
  background-color: var(--wa-danger);
  color: #fff;
}

.badge-warning, .bg-warning {
  background-color: var(--wa-warning);
  color: #212529;
}

.badge-info, .bg-info {
  background-color: var(--wa-info);
  color: #fff;
}

.badge-light, .bg-light {
  background-color: var(--card-background);
  color: var(--text-primary);
}

.badge-dark, .bg-dark {
  background-color: var(--text-primary);
  color: #fff;
}

/* Subtle Badges */
.bg-label-primary {
  background-color: rgba(58, 165, 255, 0.15);
  color: var(--wa-primary);
}

.bg-label-secondary {
  background-color: rgba(86, 101, 115, 0.15);
  color: var(--text-secondary);
}

.bg-label-success {
  background-color: rgba(46, 204, 113, 0.15);
  color: var(--wa-success);
}

.bg-label-danger {
  background-color: rgba(231, 76, 60, 0.15);
  color: var(--wa-danger);
}

.bg-label-warning {
  background-color: rgba(243, 156, 18, 0.15);
  color: var(--wa-warning);
}

.bg-label-info {
  background-color: rgba(0, 208, 255, 0.15);
  color: var(--wa-info);
}

/* Pill Badges */
.badge-pill, .rounded-pill {
  border-radius: 50rem;
}

/* Dark Theme Adjustments */
.theme-dark .bg-label-primary {
  background-color: rgba(56, 189, 248, 0.15);
  color: var(--wa-primary-light);
}

.theme-dark .bg-label-secondary {
  background-color: rgba(203, 213, 225, 0.15);
  color: var(--text-secondary);
}

.theme-dark .bg-label-success {
  background-color: rgba(74, 222, 128, 0.15);
  color: var(--wa-success);
}

.theme-dark .bg-label-danger {
  background-color: rgba(248, 113, 113, 0.15);
  color: var(--wa-danger);
}

.theme-dark .bg-label-warning {
  background-color: rgba(251, 191, 36, 0.15);
  color: var(--wa-warning);
}

.theme-dark .bg-label-info {
  background-color: rgba(34, 211, 238, 0.15);
  color: var(--wa-info);
}

/* -------------------------------------------------------------------------- */
/* --- Alerts --- */
/* -------------------------------------------------------------------------- */
.alert {
  position: relative;
  padding: 1rem;
  margin-bottom: 1rem;
  border: 1px solid transparent;
  border-radius: var(--card-border-radius);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.alert-primary {
  color: #0056b3;
  background-color: rgba(58, 165, 255, 0.15);
  border-color: rgba(58, 165, 255, 0.5);
}

.alert-secondary {
  color: #3d4852;
  background-color: rgba(86, 101, 115, 0.15);
  border-color: rgba(86, 101, 115, 0.5);
}

.alert-success {
  color: #1a7740;
  background-color: rgba(46, 204, 113, 0.15);
  border-color: rgba(46, 204, 113, 0.5);
}

.alert-danger {
  color: #a22a1d;
  background-color: rgba(231, 76, 60, 0.15);
  border-color: rgba(231, 76, 60, 0.5);
}

.alert-warning {
  color: #ad6c00;
  background-color: rgba(243, 156, 18, 0.15);
  border-color: rgba(243, 156, 18, 0.5);
}

.alert-info {
  color: #008fb3;
  background-color: rgba(0, 208, 255, 0.15);
  border-color: rgba(0, 208, 255, 0.5);
}

/* Dark Theme Alerts */
.theme-dark .alert-primary {
  color: #93ceff;
  background-color: rgba(56, 189, 248, 0.15);
  border-color: rgba(56, 189, 248, 0.4);
}

.theme-dark .alert-secondary {
  color: #a0aec0;
  background-color: rgba(160, 174, 192, 0.15);
  border-color: rgba(160, 174, 192, 0.4);
}

.theme-dark .alert-success {
  color: #68d391;
  background-color: rgba(104, 211, 145, 0.15);
  border-color: rgba(104, 211, 145, 0.4);
}

.theme-dark .alert-danger {
  color: #fc8181;
  background-color: rgba(252, 129, 129, 0.15);
  border-color: rgba(252, 129, 129, 0.4);
}

.theme-dark .alert-warning {
  color: #fbd38d;
  background-color: rgba(251, 211, 141, 0.15);
  border-color: rgba(251, 211, 141, 0.4);
}

.theme-dark .alert-info {
  color: #76e4f7;
  background-color: rgba(118, 228, 247, 0.15);
  border-color: rgba(118, 228, 247, 0.4);
}

/* Alert with Icon */
.alert-with-icon {
  padding-left: 3.5rem;
  position: relative;
}

.alert-with-icon .alert-icon {
  position: absolute;
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
  font-size: 1.5rem;
}

/* Alert Dismissible */
.alert-dismissible {
  padding-right: 3rem;
}

.alert-dismissible .btn-close {
  position: absolute;
  top: 0;
  right: 0;
  padding: 1.25rem 1rem;
  background: transparent;
  border: 0;
  font-size: 1.25rem;
  color: inherit;
  opacity: 0.5;
  cursor: pointer;
}

.alert-dismissible .btn-close:hover {
  opacity: 1;
}

/* Alert with border-left */
.alert-border-left {
  border-left-width: 4px;
}

/* -------------------------------------------------------------------------- */
/* --- Modals --- */
/* -------------------------------------------------------------------------- */
.modal-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(3px);
  z-index: 1040;
}

.theme-dark .modal-backdrop {
  background-color: rgba(15, 23, 42, 0.7);
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1050;
  overflow-x: hidden;
  overflow-y: auto;
  outline: 0;
  display: none;
}

.modal.show {
  display: block;
}

.modal-dialog {
  position: relative;
  width: auto;
  margin: 1.75rem auto;
  max-width: 500px;
  pointer-events: none;
  transform: translateY(-50px);
  transition: transform 0.3s ease-out;
}

.modal.show .modal-dialog {
  transform: translateY(0);
}

.modal-content {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  pointer-events: auto;
  background-color: var(--card-background);
  border-radius: var(--card-border-radius);
  box-shadow: var(--box-shadow);
  border: 1px solid rgba(58, 165, 255, 0.3);
  outline: 0;
  overflow: hidden;
}

.theme-dark .modal-content {
  border-color: rgba(56, 189, 248, 0.2);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.theme-dark .modal-header {
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-card-title);
  font-weight: var(--font-weight-card-title);
  margin: 0;
  color: var(--text-primary);
}

.modal-header .btn-close {
  padding: 0.75rem;
  margin: -0.75rem -0.75rem -0.75rem auto;
  background: transparent;
  border: 0;
  font-size: 1.25rem;
  color: var(--text-muted);
  cursor: pointer;
  transition: color 0.15s ease-in-out;
}

.modal-header .btn-close:hover {
  color: var(--text-primary);
}

.modal-body {
  position: relative;
  flex: 1 1 auto;
  padding: 1.5rem;
}

.modal-footer {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-end;
  padding: 1.25rem;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  gap: 0.5rem;
}

.theme-dark .modal-footer {
  border-top-color: rgba(255, 255, 255, 0.1);
}

/* Modal Sizes */
.modal-sm {
  max-width: 300px;
}

.modal-lg {
  max-width: 800px;
}

.modal-xl {
  max-width: 1140px;
}

/* Modal Animations */
@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: translateY(-50px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.modal.fade .modal-dialog {
  animation: modalFadeIn 0.3s ease-out;
}

/* Modal Centered */
.modal-dialog-centered {
  display: flex;
  align-items: center;
  min-height: calc(100% - 3.5rem);
}

/* Modal Scrollable */
.modal-dialog-scrollable .modal-content {
  max-height: calc(100vh - 3.5rem);
}

.modal-dialog-scrollable .modal-body {
  overflow-y: auto;
}

/* Modal with Custom Header */
.modal-custom-header {
  position: relative;
  padding: 2rem;
  background: var(--wa-gradient-blue);
  color: #fff;
  text-align: center;
}

.modal-custom-header::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0) 100%);
}

/* Modal with Image */
.modal-img {
  width: 100%;
  border-radius: var(--card-border-radius) var(--card-border-radius) 0 0;
  overflow: hidden;
}

.modal-img img {
  width: 100%;
  height: auto;
  object-fit: cover;
}

/* -------------------------------------------------------------------------- */
/* --- Pagination --- */
/* -------------------------------------------------------------------------- */
.pagination {
  display: flex;
  padding-left: 0;
  list-style: none;
  border-radius: 0.25rem;
  margin: 1.5rem 0;
}

.page-link {
  position: relative;
  display: block;
  padding: 0.5rem 0.75rem;
  margin-left: -1px;
  line-height: 1.25;
  color: var(--wa-primary);
  background-color: var(--card-background);
  border: 1px solid rgba(0, 0, 0, 0.1);
  transition: all 0.15s ease-in-out;
}

.theme-dark .page-link {
  border-color: rgba(255, 255, 255, 0.1);
}

.page-item:first-child .page-link {
  margin-left: 0;
  border-top-left-radius: 0.25rem;
  border-bottom-left-radius: 0.25rem;
}

.page-item:last-child .page-link {
  border-top-right-radius: 0.25rem;
  border-bottom-right-radius: 0.25rem;
}

.page-item.active .page-link {
  z-index: 3;
  color: #fff;
  background-color: var(--wa-primary);
  border-color: var(--wa-primary);
}

.page-item.disabled .page-link {
  color: var(--text-muted);
  pointer-events: none;
  cursor: auto;
  background-color: var(--card-background);
  border-color: rgba(0, 0, 0, 0.1);
}

.theme-dark .page-item.disabled .page-link {
  border-color: rgba(255, 255, 255, 0.1);
}

/* Hover Effects */
.page-link:hover {
  z-index: 2;
  color: var(--wa-primary-dark);
  text-decoration: none;
  background-color: var(--hover-bg);
  border-color: rgba(0, 0, 0, 0.1);
}

.theme-dark .page-link:hover {
  border-color: rgba(255, 255, 255, 0.1);
}

/* Pagination Sizes */
.pagination-lg .page-link {
  padding: 0.75rem 1.5rem;
  font-size: 1.25rem;
  line-height: 1.5;
}

.pagination-lg .page-item:first-child .page-link {
  border-top-left-radius: 0.3rem;
  border-bottom-left-radius: 0.3rem;
}

.pagination-lg .page-item:last-child .page-link {
  border-top-right-radius: 0.3rem;
  border-bottom-right-radius: 0.3rem;
}

.pagination-sm .page-link {
  padding: 0.25rem 0.5rem;
  font-size: 0.875rem;
  line-height: 1.5;
}

.pagination-sm .page-item:first-child .page-link {
  border-top-left-radius: 0.2rem;
  border-bottom-left-radius: 0.2rem;
}

.pagination-sm .page-item:last-child .page-link {
  border-top-right-radius: 0.2rem;
  border-bottom-right-radius: 0.2rem;
}

/* Futuristic Pagination */
.pagination-futuristic {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
}

.pagination-futuristic .page-item {
  margin: 0 2px;
}

.pagination-futuristic .page-link {
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  background-color: var(--card-background);
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  color: var(--text-primary);
  transition: all 0.2s ease;
}

.pagination-futuristic .page-item.active .page-link {
  background: var(--wa-gradient-blue);
  color: #fff;
  box-shadow: 0 4px 10px rgba(58, 165, 255, 0.3);
}

.pagination-futuristic .page-link:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
}

/* -------------------------------------------------------------------------- */
/* --- Progress Bars --- */
/* -------------------------------------------------------------------------- */
.progress {
  display: flex;
  height: 0.75rem;
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 0.5rem;
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
}

.theme-dark .progress {
  background-color: rgba(255, 255, 255, 0.1);
  box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.2);
}

.progress-bar {
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  background: var(--wa-gradient-blue);
  transition: width 0.6s ease;
  border-radius: 0.5rem;
}

/* Progress Bar Colors */
.progress-bar-primary {
  background: var(--wa-gradient-blue);
}

.progress-bar-secondary {
  background: linear-gradient(135deg, var(--text-secondary) 0%, var(--text-muted) 100%);
}

.progress-bar-success {
  background: linear-gradient(135deg, var(--wa-success) 0%, #27ae60 100%);
}

.progress-bar-danger {
  background: linear-gradient(135deg, var(--wa-danger) 0%, #c0392b 100%);
}

.progress-bar-warning {
  background: linear-gradient(135deg, var(--wa-warning) 0%, #e67e22 100%);
}

.progress-bar-info {
  background: linear-gradient(135deg, var(--wa-info) 0%, #00a8cc 100%);
}

/* Progress Bar Sizes */
.progress-sm {
  height: 0.5rem;
}

.progress-lg {
  height: 1rem;
}

.progress-xl {
  height: 1.5rem;
}

/* Progress Bar with Label */
.progress-with-label {
  position: relative;
  margin-bottom: 1.5rem;
}

.progress-label {
  font-family: 'Michroma', sans-serif;
  font-size: 0.75rem;
  font-weight: 600;
  margin-bottom: 0.5rem;
  display: flex;
  justify-content: space-between;
  color: var(--text-primary);
}

/* Animated Progress Bar */
.progress-bar-animated {
  animation: progress-bar-stripes 1s linear infinite;
}

@keyframes progress-bar-stripes {
  from {
    background-position: 1rem 0;
  }
  to {
    background-position: 0 0;
  }
}

.progress-bar-striped {
  background-image: linear-gradient(
    45deg,
    rgba(255, 255, 255, 0.15) 25%,
    transparent 25%,
    transparent 50%,
    rgba(255, 255, 255, 0.15) 50%,
    rgba(255, 255, 255, 0.15) 75%,
    transparent 75%,
    transparent
  );
  background-size: 1rem 1rem;
}

/* -------------------------------------------------------------------------- */
/* --- Charts & Graphs --- */
/* -------------------------------------------------------------------------- */
.chart-container {
  position: relative;
  margin: auto;
  height: 300px;
  width: 100%;
}

.chart-card {
  border-radius: var(--card-border-radius);
  padding: var(--card-padding);
  background-color: var(--card-background);
  box-shadow: var(--card-shadow);
  margin-bottom: var(--spacing-between-cards);
  transition: all 0.3s ease;
  border: 1px solid rgba(58, 165, 255, 0.3);
}

.chart-card:hover {
  box-shadow: var(--card-hover-shadow);
  transform: translateY(-3px);
}

.chart-title {
  font-family: 'Michroma', sans-serif;
  font-size: var(--font-size-card-title);
  font-weight: var(--font-weight-card-title);
  margin-bottom: 1rem;
  color: var(--text-primary);
}

.chart-legend {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 1rem;
}

.legend-item {
  display: flex;
  align-items: center;
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.legend-color {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  margin-right: 0.5rem;
}

/* Chart Grid Lines */
.chart-grid-lines {
  stroke: rgba(0, 0, 0, 0.05);
  stroke-width: 1;
}

.theme-dark .chart-grid-lines {
  stroke: rgba(255, 255, 255, 0.1);
}

/* Custom Chart Colors */
.chart-color-1 { color: var(--wa-primary); }
.chart-color-2 { color: var(--wa-secondary); }
.chart-color-3 { color: var(--wa-success); }
.chart-color-4 { color: var(--wa-warning); }
.chart-color-5 { color: var(--wa-danger); }
.chart-color-6 { color: var(--wa-info); }

/* Tooltip for Charts */
.chart-tooltip {
  position: absolute;
  background: var(--card-background);
  border-radius: 5px;
  padding: 10px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  pointer-events: none;
  z-index: 10;
  min-width: 120px;
  border: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 0.875rem;
}

.theme-dark .chart-tooltip {
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
  border-color: rgba(255, 255, 255, 0.1);
}

.chart-tooltip-title {
  font-weight: 600;
  margin-bottom: 5px;
  color: var(--text-primary);
}

.chart-tooltip-value {
  color: var(--wa-primary);
}

/* Chart Types */
.chart-line, .chart-bar, .chart-pie, .chart-doughnut, .chart-radar, .chart-polar-area {
  position: relative;
}

/* Chart Loading State */
.chart-loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
  border-radius: var(--card-border-radius);
}

.theme-dark .chart-loading {
  background-color: rgba(15, 23, 42, 0.8);
}

.chart-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid rgba(58, 165, 255, 0.2);
  border-top-color: var(--wa-primary);
  border-radius: 50%;
  animation: chart-spinner 1s linear infinite;
}

@keyframes chart-spinner {
  to { transform: rotate(360deg); }
}

/* -------------------------------------------------------------------------- */
/* --- Tabs & Pills --- */
/* -------------------------------------------------------------------------- */
.nav-tabs {
  display: flex;
  flex-wrap: wrap;
  padding-left: 0;
  margin-bottom: 0;
  list-style: none;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.theme-dark .nav-tabs {
  border-bottom-color: rgba(255, 255, 255, 0.1);
}

.nav-tabs .nav-item {
  margin-bottom: -1px;
}

.nav-tabs .nav-link {
  display: block;
  padding: 0.75rem 1.25rem;
  margin-right: 2px;
  border: 1px solid transparent;
  border-top-left-radius: 0.25rem;
  border-top-right-radius: 0.25rem;
  color: var(--text-secondary);
  transition: all 0.2s ease;
  text-decoration: none;
  font-weight: 500;
}

.nav-tabs .nav-link:hover, .nav-tabs .nav-link:focus {
  border-color: rgba(0, 0, 0, 0.05) rgba(0, 0, 0, 0.05) rgba(0, 0, 0, 0.1);
  color: var(--wa-primary);
}

.theme-dark .nav-tabs .nav-link:hover, .theme-dark .nav-tabs .nav-link:focus {
  border-color: rgba(255, 255, 255, 0.05) rgba(255, 255, 255, 0.05) rgba(255, 255, 255, 0.1);
}

.nav-tabs .nav-link.active,
.nav-tabs .nav-item.show .nav-link {
  color: var(--wa-primary);
  background-color: var(--card-background);
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) var(--card-background);
  border-bottom: 2px solid var(--wa-primary);
}

.theme-dark .nav-tabs .nav-link.active,
.theme-dark .nav-tabs .nav-item.show .nav-link {
  border-color: rgba(255, 255, 255, 0.1) rgba(255, 255, 255, 0.1) var(--card-background);
}

.nav-tabs .nav-link.disabled {
  color: var(--text-muted);
  background-color: transparent;
  border-color: transparent;
  pointer-events: none;
}

/* Pills */
.nav-pills {
  display: flex;
  flex-wrap: wrap;
  padding-left: 0;
  margin-bottom: 0;
  list-style: none;
}

.nav-pills .nav-item {
  margin-right: 0.5rem;
  margin-bottom: 0.5rem;
}

.nav-pills .nav-link {
  display: block;
  padding: 0.5rem 1rem;
  border-radius: 0.25rem;
  color: var(--text-secondary);
  transition: all 0.2s ease;
  text-decoration: none;
  font-weight: 500;
}

.nav-pills .nav-link:hover, .nav-pills .nav-link:focus {
  background-color: var(--hover-bg);
  color: var(--wa-primary);
}

.nav-pills .nav-link.active,
.nav-pills .show > .nav-link {
  color: #fff;
  background-color: var(--wa-primary);
  box-shadow: 0 4px 10px rgba(58, 165, 255, 0.3);
}

.nav-pills .nav-link.disabled {
  color: var(--text-muted);
  background-color: transparent;
  pointer-events: none;
}

/* Futuristic Pills */
.nav-pills-futuristic {
  display: flex;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 2rem;
  padding: 0.25rem;
  margin-bottom: 1.5rem;
}

.theme-dark .nav-pills-futuristic {
  background-color: rgba(255, 255, 255, 0.05);
}

.nav-pills-futuristic .nav-item {
  flex: 1;
  text-align: center;
  margin: 0;
}

.nav-pills-futuristic .nav-link {
  border-radius: 2rem;
  padding: 0.75rem 1.25rem;
  transition: all 0.3s ease;
  color: var(--text-secondary);
}

.nav-pills-futuristic .nav-link.active {
  background: var(--wa-gradient-blue);
  color: #fff;
  box-shadow: 0 4px 10px rgba(58, 165, 255, 0.3);
}

/* Tab Content */
.tab-content {
  padding: 1.5rem 0;
}

.tab-pane {
  display: none;
}

.tab-pane.active {
  display: block;
}

/* Fade Effect */
.tab-content > .tab-pane.fade {
  opacity: 0;
  transition: opacity 0.15s linear;
}

.tab-content > .tab-pane.fade.show {
  opacity: 1;
}

/* Vertical Tabs */
.nav-tabs-vertical {
  display: flex;
}

.nav-tabs-vertical .nav-tabs {
