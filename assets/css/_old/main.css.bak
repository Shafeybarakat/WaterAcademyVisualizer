/* Recent Activity Widget */
.activity-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.activity-item {
  display: flex;
  padding: 1rem 0;
  border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.theme-dark .activity-item {
  border-bottom-color: rgba(255, 255, 255, 0.05);
}

.activity-item:last-child {
  border-bottom: none;
